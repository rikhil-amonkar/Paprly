// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Each paper has a title, abstract, problem, method, results, limitations, and createdAt timestamp
model Paper {
  id            String   @id @default(cuid())
  arxivId       String // Unique arXiv ID for paper
  url           String // General URL (canonical link like https://arxiv.org/abs/2410.12345, etc)
  title         String
  contributors  String?
  abstract      String?  @default("")
  problem       String?
  method        String?
  results       String?
  limitations   String?
  datePublished String? // Date the paper was submitted onto arXiv
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // New URL Additions
  projects Project[] @relation("ProjectPapers")
}

// Each user has projects for their own papers
model Project {
  id           String   @id @default(cuid())
  title        String
  abstract     String?  @default("")
  theme        String? // e.g., "Machine Learning", "Computer Vision", etc.
  contributors String?  @default("") // CSV of contributors (for now)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  papers       Paper[]  @relation("ProjectPapers") // Many-to-many relationship with papers
}
