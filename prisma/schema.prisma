// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Each paper has a title, abstract, problem, method, results, limitations, and createdAt timestamp
model Paper {
  id          Int      @id @default(autoincrement())
  title       String
  abstract    String?
  problem     String?
  method      String?
  results     String?
  limitations String?
  createdAt   DateTime @default(now())
}
